<h3 class="ui header">{{t "forms.i-i-s-prilozhenie-parkomata-парковка-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номПарковки
      class=(if (v-get validationModel "номПарковки" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-parkomata-парковка-e.номПарковки-caption")
      data-test-i-i-s-prilozhenie-parkomata-парковка-e-номПарковки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номПарковки" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.адрес
      class=(if (v-get validationModel "адрес" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-parkomata-парковка-e.адрес-caption")
      data-test-i-i-s-prilozhenie-parkomata-парковка-e-адрес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адрес" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-prilozhenie-parkomata-парковка-e.паркомат-caption"}}</label>
    {{flexberry-groupedit
      componentName="паркоматGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.паркомат
      content=model.паркомат
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "паркомат" "isInvalid") "error")
      data-test-i-i-s-prilozhenie-parkomata-парковка-e-паркомат=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "паркомат" "message")}}
  </div>
</form>
